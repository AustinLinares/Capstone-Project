<%= form_with(model: subscriber) do |form| %>
  <% if subscriber.errors.any? %>
    <div style="color: red">
      <ul>
        <% subscriber.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :preference, style: "display: block" %>
      <% preferences.each do |preference| %>
        <%= form.check_box(preference.name) %>
        <%= form.label(preference.name, "#{preference.name}'s fashion") %>   
      <% end %>
  </div>

  <div>
    <%= form.submit ("Subscribe Me!") %>
  </div>
<% end %>
